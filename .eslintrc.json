{
    "env": {
        "browser": true,
        "es6": true,
        "node" : true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens" : [
            "error",
            "always"
        ],
        "indent" : [
            "off",
            4
        ],
        "quotes" : [
            "error",
            "single"
        ],
        "semi" : [
            "off",
            "always"
        ]
    }
}